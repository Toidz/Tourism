header.header
  .inner-logo
    a(href=`/${pathAdmin}/dashboard`)
      span #{info.websiteName}
      span
        img(src=info.logo, alt="", style="width:50px")
  .inner-wrap
    .inner-notify
      img(src="/admin/assets/images/icon-bell.svg", alt="")
      span 6
    .inner-account
      .inner-avatar
        img(src=account.avatar, alt="")
      .inner-text
        .inner-name #{account.fullName}
        .inner-role #{role.name}
    button.inner-button-menu
      <i class="fa-solid fa-bars"></i>