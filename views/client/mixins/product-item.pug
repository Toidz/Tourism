mixin product-item(item)
  - const percent = parseInt(((item.priceAdult-item.priceNewAdult)/item.priceAdult)*100)
  
  .product-item
    .inner-image
      a(href=`/tour/${item.slug}`)
        img(
          alt=item.name
          src=item.avatar
          )
    .inner-discount
      i.fa-solid.fa-bolt
      | Giảm -#{percent}%
    .inner-content
      h3.inner-title
        a(href=`/tour/${item.slug}`) #{item.name}
      .inner-prices
        .inner-price-old
          | #{item.priceAdult}
          span.inner-unit đ
        .inner-price-new
          | #{item.priceNewAdult}
          span.inner-unit đ
      .inner-desc
        //- .inner-desc-item
        //-   | Mã Tour:
        //-   b #{item.id}
        .inner-desc-item
          | Ngày Khởi Hành:
          b #{item.formatDepartureDate}
        .inner-desc-item
          | Thời Gian:
          b #{item.time}
      .inner-meta
        .inner-stock
          .inner-label Số chỗ còn:
          .inner-number #{item.stockAdult}