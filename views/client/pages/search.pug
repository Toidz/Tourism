extends ../layout/default.pug
include ../mixins/product-item.pug
block main
  .section-9
    .container
      .inner-wrap
        .inner-left
          // Box Filter
          .box-filter(filter-tour)
            .inner-head
              .inner-title Bộ Lọc
              i.fa-solid.fa-filter
            .inner-body
              .inner-group
                .inner-label Điểm đi
                select(name="" locationStart)
                  option(value="") -- Chọn điểm đi --
                  each item in cityList
                    option(value=item.id) #{item.name}
              .inner-group
                .inner-label Điểm đến
                select(name="" locationEnd)
                  option(value="") -- Chọn điểm đến --
                  each item in cityList
                    option(value=item.name) #{item.name}
              .inner-group
                .inner-label Ngày khởi hành
                input(type="date" timeStart)
              .inner-group
                .inner-label Số Lượng Hành Khách
                .inner-input-list
                  .inner-input-item
                    .inner-label Người lớn:
                    input(
                      value="0" 
                      type="number"
                      numberAdult
                      )
                  .inner-input-item
                    .inner-label Trẻ em:
                    input(
                      value="0" 
                      type="number"
                      numberChildren
                      )
                  .inner-input-item
                    .inner-label Em bé:
                    input(
                      value="0" 
                      type="number"
                      numberBaby
                      )
              .inner-group
                .inner-label Mức giá
                select(name="" price)
                  option(value="") -- Chọn khoảng giá --
                  option(value=0) Dưới 1tr
                  option(value=1) Từ 1tr đến 3tr
                  option(value=3) Từ 3tr đến 6tr
                  option(value=6) Từ 6tr đến 10tr
                  option(value=10) Trên 10tr
              .inner-group
                button.inner-button Áp Dụng
          .inner-overlay
          // End Box Filter
        .inner-right
          .inner-info
            h2.inner-title Kết quả tìm kiếm
          .inner-info-2
            .inner-count-record
              h3 #{totalTour>0?"Có: "+ totalTour +" kết quả tìm kiếm": "Không tìm thấy tour thỏa mãn!"} 
            button.inner-filter-mobile
              span.inner-title Bộ Lọc
              i.fa-solid.fa-filter
          .inner-list-tour
            // Product Item
            each item in listTour
              +product-item(item)
            // End Product Item
          // Pagination
          .box-pagination
            button
              i.fa-solid.fa-angles-left
            button.active 1
            button 2
            button 3
            button 4
            button
              i.fa-solid.fa-angles-right
          // End Pagination
  // End Section 9
    